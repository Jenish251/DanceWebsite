extends base.pug

block style
    style 
        include ../static/style.css
        include ../static/contact.css

block content
    form(action= "/contact", method= "post") 
        
        input(type="text" name="name" placeholder="Enter Your Name" style="margin-top : 40px")
        input(type="int" name="Age" placeholder="Enter Your Age")
        input(type="email" name="email" placeholder="Enter Your Email Adress")
        textarea(name="Adress", cols="30", rows="10" placeholder="Enter Your Email Adress") 
        textarea(name="Problem", cols="30", rows="10" placeholder= "Enter You Issue") 
        button(name="Submit" ,id ="btn" ) Submit
            